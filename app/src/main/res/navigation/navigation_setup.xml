<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_setup"
    app:startDestination="@id/setupOpenAIContainerFragment">

    <fragment
        android:id="@+id/setupOpenAIContainerFragment"
        android:name="io.sunshine0523.gpt_assistant.ui.setup.SetupOpenAIContainerFragment"
        android:label="SetupOpenAIContainerFragment" >
        <action
            android:id="@+id/action_setup_openai_to_setup_speech"
            app:destination="@id/setupSpeechFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/setupSpeechFragment"
        android:name="io.sunshine0523.gpt_assistant.ui.setup.SetupSpeechFragment"
        android:label="SetupSpeechFragment" />
</navigation>